<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
         PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
         "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
         
<mapper namespace="com.esh.start.bankbook.BankBookDAO">
  
  <select id="getList" resultType="com.esh.start.bankbook.BankBookDTO">
  	SELECT * FROM BANKBOOK ORDER BY BOOKNUM DESC
  </select>
  
  <select id="getDetail" parameterType="com.esh.start.bankbook.BankBookDTO" resultType="com.esh.start.bankbook.BankBookDTO">
		SELECT * FROM BANKBOOK WHERE BOOKNUM = #{bookNum}
  </select>
  
  
  <insert id="setBankBook" parameterType="com.esh.start.bankbook.BankBookDTO">
		INSERT INTO BANKBOOK VALUES (#{bookNum}, #{bookName}, #{bookRate}, 1)
	</insert>
	
	<update id="setUpdate" parameterType="com.esh.start.bankbook.BankBookDTO">
		UPDATE BANKBOOK SET BOOKNAME= #{bookName}, BOOKRATE=#{bookRate} WHERE BOOKNUM = #{bookNum}
	</update>
	
	<update id="setChangeSale" parameterType="com.esh.start.bankbook.BankBookDTO">
		UPDATE BANKBOOK SET BOOKSALE = #{bookSale} WHERE BOOKNUM = #{bookNum}
	</update>
  
   <delete id="setDelete" parameterType="com.esh.start.bankbook.BankBookDTO">
		DELETE BANKBOOK WHERE BOOKNUM = #{bookNum}
	</delete>
 
 
</mapper>
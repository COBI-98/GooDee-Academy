<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
         PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
         "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
         
<mapper namespace="com.esh.start.qna.QnaDAO">


	<select id="getList" resultType="com.esh.start.qna.QnaDTO">
		select*from QNA order by QNANum DESC
	</select>
	
	<select id="getDetail" parameterType="QnaDTO"
		resultType="QnaDTO" >
		SELECT * FROM QNA WHERE QNANUM = #{qnaNum}
	</select>
	
	<insert id="add" parameterType="QnaDTO">
		Insert into QNA values (qna_seq.NEXTVAL,#{title},#{content},#{writer},SYSDATE,0)
	</insert>

	<delete id="setDelete" parameterType="QnaDTO">
		delete QNA where QNA.QNAnum = #{qnaNum}
	</delete>
	
	<update id="setUpdate" parameterType="QnaDTO">
		UPDATE QNA SET TITLE=#{title}, CONTENT=#{content} WHERE QNANUM =#{qnaNum}
	</update>

</mapper>